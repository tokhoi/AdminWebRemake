@page "/school/classes"

<PageTitle>Danh sách lớp học</PageTitle>

<div class="animate-fade-in flex-col gap-6">
    <div class="std-card">
        <div class="flex-between mb-4 flex-wrap gap-4">
            <h2 class="card-title">Danh sách lớp học</h2>

            <div style="display: flex; gap: 8px; align-items: center; flex-wrap: wrap;">
                <select class="form-input" style="width: auto; min-width: 150px;">
                    <option>Tất cả khối</option>
                    <option>Khối 1</option>
                    <option>Khối 2</option>
                    <option>Khối 3</option>
                    <option>Khối 4</option>
                    <option>Khối 5</option>
                </select>

                <button class="btn btn-primary">
                    <span class="material-icons-round" style="font-size: 18px;">add</span> Thêm mới
                </button>

                <div class="input-wrapper" style="width: 200px;">
                    <input class="form-input" placeholder="Nhập tên lớp..." style="padding-right: 36px;" />
                    <button class="btn-primary" style="position: absolute; right: 0; top: 0; height: 100%; border-radius: 0 8px 8px 0; padding: 0 12px;">
                        <span class="material-icons-round" style="font-size: 18px;">search</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th class="text-center w-16">STT</th>
                        <th>Mã lớp</th>
                        <th>Tên lớp</th>
                        <th>Khối</th>
                        <th class="text-center">Sĩ số</th>
                        <th class="text-center">GVCN</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td style="font-family: monospace;">LH@(100 + i)</td>
                            <td style="font-weight: 500;">Lớp 1A@i</td>
                            <td>Khối 1</td>
                            <td class="text-center">35</td>
                            <td class="text-center">Nguyễn Văn A</td>
                            <td class="text-center">
                                <button class="btn-icon" title="Sửa"><span class="material-icons-round text-primary" style="font-size: 18px;">edit</span></button>
                                <button class="btn-icon" title="Xóa"><span class="material-icons-round text-red" style="font-size: 18px;">delete</span></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="flex-between p-4 bg-gray-50 border-t mt-4" style="padding: 1rem; border-top: 1px solid var(--border);">
            <div class="flex gap-1" style="display: flex; gap: 4px;">
                <button class="btn-primary" style="width: 32px; height: 32px; padding: 0;">1</button>
                <button class="btn-outline" style="width: 32px; height: 32px; padding: 0;">2</button>
                <button class="btn-outline" style="width: 32px; height: 32px; padding: 0;">3</button>
                <button class="btn-outline" style="width: 32px; height: 32px; padding: 0;"><span class="material-icons-round" style="font-size: 14px;">arrow_forward</span></button>
            </div>
            <div class="text-muted" style="font-size: 0.8rem;">1 - 10 của 35 lớp học</div>
        </div>
    </div>
</div>