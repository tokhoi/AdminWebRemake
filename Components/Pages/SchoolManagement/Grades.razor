@page "/school/grades"
@rendermode InteractiveServer

<PageTitle>Quản lý Khối</PageTitle>

<div class="animate-fade-in flex-col gap-6">
    <div class="std-card">
        <div class="flex-between mb-4 flex-wrap gap-4">
            <h2 class="card-title">Danh sách Khối học</h2>
            <button class="btn btn-primary">
                <span class="material-icons-round" style="font-size: 18px;">add</span> Thêm khối
            </button>
        </div>

        <div class="table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th class="text-center w-16">STT</th>
                        <th>Mã Khối</th>
                        <th>Tên Khối</th>
                        <th>Trưởng khối</th>
                        <th class="text-center">Số lượng lớp</th>
                        <th class="text-center">Tổng học sinh</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td class="text-muted font-mono">KHOI_@i</td>
                            <td style="font-weight: 700; color: var(--primary);">Khối @i</td>
                            <td>Nguyễn Thị Trưởng Khối @i</td>
                            <td class="text-center"><span class="status-badge bg-yellow-light">8 lớp</span></td>
                            <td class="text-center">350</td>
                            <td class="text-center">
                                <button class="btn-icon" title="Cấu hình"><span class="material-icons-round text-primary" style="font-size: 18px;">settings</span></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>